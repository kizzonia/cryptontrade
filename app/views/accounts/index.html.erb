<div class="content">
    <div class="container-fluid">
      <% if Account.where(user_id: current_user.id).exists?%>
        <div class="row">
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-success text-center">
                                  <i class="ti-wallet"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Account Balance</p>
                                <% @accounts.take(1).each do |a| %>

                                  $<%= a.balance %>

                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-bar-chart"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Capital</p>
                                  $<%= a.capital %>
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-anchor"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Capital Guranted</p>
                                  <%= a.guranted %>%
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-pulse"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Gross profit/loss</p>
                                $  <%= a.gross_pl %>
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-stats-down"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Net profit/loss</p>
                                $<%= a.net_pl %>
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-pulse"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>ROI</p>
                                  <%= a.roi %>%
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                              <i class="ti-reload"></i> Updated now
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <%end%>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-success text-center">
                                  <i class="ti-credit-card"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Deposits</p>
                                  <%= Deposit.where(user_id: current_user.id).count %>

                              </div>
                          </div>

                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                             <%= link_to new_deposit_path, class: "btn btn-primary" do %>
                                Make a Deposit
                                <%end%>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
          <div class="col-lg-3 col-sm-6">
              <div class="card">
                  <div class="content">
                      <div class="row">
                          <div class="col-xs-5">
                              <div class="icon-big icon-danger text-center">
                                  <i class="ti-money"></i>
                              </div>
                          </div>
                          <div class="col-xs-7">
                              <div class="numbers">
                                  <p>Withdrawals</p>
                                  <%= Withdraw.where(user_id: current_user.id).count %>
                              </div>
                          </div>
                      </div>
                      <div class="footer">
                          <hr />
                          <div class="stats">
                            <%= link_to new_withdraw_path, class: "btn btn-primary" do %>
                               Withdraw Funds
                               <%end%>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </div>
      <div class="row">
        <div class="col-md-12">
            <div class="card">
              <div class="row">
                <div class="col-md-12 embed-responsive embed-responsive-16by9">

                  <div style="width:100%; max-width:100% !important;" class="btcwdgt-chart"></div>


          </div>
              </div>

            </div>
          </div>
      </div>
     <% else %>
     <div class="row" style="margin-top:50px;">
       <div class="col-md-8 col-md-offset-2">


       <div class="card">
         <div class="image">
           <%= image_tag "home7-slider-img-1.jpg", class: "img-fluid" %>
         </div>
         <div class="content">
           <div class="header text-center">
               <h4 class="title">Start your making life easier</h4>
               <br />
             <%= link_to "Create Your Trading Account", new_account_path, class: "btn btn-primary text-center"%>
</div>
         </div>

       </div>
     </div>
      </div>
<% end %>

    </div>
</div>
